 function chooseProduct( id , type ){

	 $.ajax({
			type: "POST",
			data: {"id":id , "type":type},
			url : "<?php echo $this->url(array("action" => "ajax-product" , "controller" => "registration"), 'default', true);?>",
			complete : function( response ){
				response = rocknoon.ajax.prase(response);
				if( response.status ){
					refreshCart( response.info );
				}else{
					alert(response.info );
				}
			}
		});
	 
	 }

 function chooseDeduct(){

